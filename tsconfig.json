{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "ESNext"
        ],
        "moduleResolution": "Node",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "isolatedModules": true,
        "rootDir": "src",
        "removeComments": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*.ts"
    ]
}